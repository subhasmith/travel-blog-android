<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingTranslation">

    <string-array name="location_duration_entries">
        <item>15 seconds</item>
        <item>30 seconds</item>
        <item>15 seconds after first update</item>
        <item>No auto-off</item>
    </string-array>

    <!--
    http://code.google.com/p/android/issues/detail?id=2096
    Android bug: ListPrefence can only support string-array for values, otherwise will crash
    when user selects a value of if defaultValue is used.
    -->

    <string-array name="location_duration_values">
        <item>15</item> 
        <item>30</item>
        <item>-15</item>   <!-- @string/location_duration_default -->
        <item>-9999</item> <!-- should match mNoAutOff in LocationUpdates class -->
    </string-array>

    <!--  entries are displayed to user -->
    <string-array name="distance_units_entries">
        <item>Km</item>
        <item>Miles</item>
    </string-array>

    <!--  values are received by the code -->
    <string-array name="distance_units_values">
        <item>km</item>  <!-- @string/distance_units_default -->
        <item>miles</item>
    </string-array>

</resources>